<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/weather_card_temp"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/weather_img_temp"
                android:scaleType="centerCrop"/>
            <!--                android:layout_alignParentLeft="true"-->
            <!--                android:layout_centerVertical="true"-->
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/city_card_temp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginLeft="24dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/state_card_temp"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_card_temp"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/temperature_card_temp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"


                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/summary_card_temp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@id/temperature_card_temp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:textStyle="bold"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/actual_news_card_home"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >


    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_weight="3"
        android:id="@+id/homepage_card_image"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/homepage_clickable"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homepage_card_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:maxLines="3"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homepage_timediff"
            android:layout_gravity="bottom"
            android:gravity="bottom"

            android:layout_alignParentBottom="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homepage_section" />
    </RelativeLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/hometab_card_bookmarkicon"
        android:tag="1"
        android:src="@drawable/ic_bookmark_border_black_24dp"
        />
</LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>
