<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f0f0f5</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="autoCompleteTextViewStyle">
            @style/myAutoCompleteTextViewStyle
        </item>

        <item name="textAppearanceSearchResultTitle">
            @style/mySearchResultStyle
        </item>

    </style>

    <style name="myAutoCompleteTextViewStyle">
        <item name="android:popupBackground">
            #ffffff
        </item>
    </style>

    <style name="mySearchResultStyle">
        <item name="android:textColor">
            #000000
        </item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">
            @drawable/launch_screen
        </item>

    </style>

    <style name="TextAppearance">
        <item name="android:ellipsize">end</item>
    </style>

</resources>
